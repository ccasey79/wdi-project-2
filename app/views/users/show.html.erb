
<div class="row">  
  <div class="col-md-6">
      <h2 class="profile">Profile Page</h2>

     
      <h4 class="card-title"><%= @user.username %></h4>
      <%= image_tag @user.profile_image, class: 'card-img-top' %> 
  </div>  
  <div class="col-md-6">
    <h3>Very Own Recipes</h3>

    <ul class="list-group">  
      <% @user.recipes.each do |recipe| %>
        <li class="list-group-item">
          <%= link_to recipe.name, recipe, class: 'recipes-link' %>
          <%= image_tag recipe.image, class: 'img-fluid' %>
        </li>
      <% end %>
    </ul>  
  </div>
</div>


